# Environment Configuration for Change Detection Platform

# Google Earth Engine Authentication (choose one method)
# Method 1: Service Account Key (Recommended for Production)
# GEE_SERVICE_ACCOUNT_KEY=/path/to/your/service-account-key.json
# or as JSON string:
# GEE_SERVICE_ACCOUNT_KEY={"type": "service_account", "project_id": "...", ...}

# Method 2: Leave empty to use default user authentication
# (requires: earthengine authenticate)

# Flask Configuration
FLASK_DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
PORT=5000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Change Detection Configuration
CHANGE_DETECTION_THRESHOLD=0.3
DEMO_MODE=false

# Directory Configuration
TEMP_DIR=temp
EXPORTS_DIR=exports
MODELS_DIR=models

# Logging
LOG_LEVEL=INFO

# Production Settings (for Render deployment)
# RENDER=true
# DATABASE_URL=postgresql://... 